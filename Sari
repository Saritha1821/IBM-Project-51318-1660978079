import RPi. GPIO as GPIO
import time
import signal
import sys
#setup
GPIO.setmode (GPIO.BCM)
GPIO.setup (9, GPIO.OUT)
GPIO.setup (10, GPIO.OUT)
GPIO.setup (11, GPIO.OUT)
GPIO.output(9,False)
GPIO.output(10,False)
GPIO.output(11,False)
GPIO.cleanup()
sys.exit(0)
signal.signal(signal.SIGINT,allLightsOff)
#loop
While True:
 #red
 GPIO.output(9,True)
 time.sleep(3)
 #red&amber
 GPIO.output(10,True)
 time.sleep(1)
 #green
 GPIO.output(9,False)
 GPIO.output(9,True)
 GPIO.output(11,True)
 time.sleep(5)
 #amber
 GPIO.output(11,False)
 GPIO.output(10,True)
 time.sleep(2)
 #amber off
 GPIO.output(10,False)
